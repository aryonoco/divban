{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "version": "0.2",
  "language": "en-GB",
  "dictionaries": [
    "en-gb",
    "typescript",
    "node",
    "npm",
    "bash",
    "docker",
    "softwareTerms",
    "project-words"
  ],
  "dictionaryDefinitions": [
    {
      "name": "project-words",
      "path": "./project-words.txt",
      "addWords": true
    }
  ],
  "ignorePaths": [
    "node_modules/**",
    "coverage/**",
    "dist/**",
    "*.lock",
    ".git/**",
    "divban",
    "divban-linux-*",
    "LICENSE*",
    "LICENSES/**",
    ".devcontainer/p10k.zsh",
    "llms/**"
  ],
  "ignoreRegExpList": ["/[a-f0-9]{32,}/gi", "/ghcr\\.io\\/[\\w\\-\\/]+/gi"]
}
