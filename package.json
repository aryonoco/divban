{
  "name": "divban",
  "version": "0.1.0",
  "type": "module",
  "description": "Unified rootless Podman service manager",
  "bin": {
    "divban": "./src/index.ts"
  },
  "scripts": {
    "build": "bun build ./src/index.ts --compile --minify --sourcemap --outfile divban",
    "build:linux-x64": "bun build ./src/index.ts --compile --minify --target=bun-linux-x64 --outfile divban-linux-x64",
    "build:linux-arm64": "bun build ./src/index.ts --compile --minify --target=bun-linux-arm64 --outfile divban-linux-arm64",
    "build:all": "bun run build && bun run build:linux-x64 && bun run build:linux-arm64",
    "dev": "bun run ./src/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "bunx @biomejs/biome check .",
    "format": "bunx @biomejs/biome format --write .",
    "typecheck": "bunx tsc --noEmit"
  },
  "dependencies": {
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@types/bun": "latest",
    "typescript": "5.9"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "license": "MIT"
}
